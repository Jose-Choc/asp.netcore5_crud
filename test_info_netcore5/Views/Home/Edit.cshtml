@model test_info_netcore5.Models.Clients

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar cliente</h1>
<br />
<hr />
<div class="row justify-content-center">
    <div class="text-danger">
        @ViewBag.error
    </div>
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label">Nombre</label>
                <input asp-for="Firstname" class="form-control" required />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label">Apellido</label>
                <input asp-for="Lastname" class="form-control" required />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Dirección</label>
                <input asp-for="Address" class="form-control" required />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nit" class="control-label">Nit</label>
                <input asp-for="Nit" class="form-control" required/>
                <span asp-validation-for="Nit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

